<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="#69DADB"
    tools:context=".ModInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/admin"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Num. de Registro: 1707092*"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="#69DADB">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#1597E5"
                        android:text="Paciente*: "
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/Paciente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/persona"
                        android:drawableStart="@drawable/persona"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#1597E5"
                        android:text="Edad: "
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/Edad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="20sp"
                        android:inputType="number"
                        android:hint="Edad"
                        android:drawableLeft="@drawable/edad"
                        android:drawableStart="@drawable/edad"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#1597E5"
                        android:text="Genero*: "
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/Genero2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="20sp"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#1597E5"
                        android:text="Doctor: "
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/Doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:textSize="20sp"
                        android:hint="Doctor"
                        android:drawableLeft="@drawable/doctor"
                        android:drawableStart="@drawable/doctor"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#1597E5"
                        android:text="No. Piso: "
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/Piso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:hint="No. Piso"
                        android:drawableLeft="@drawable/piso"
                        android:drawableStart="@drawable/piso"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#1597E5"
                        android:text="No. Cama: "
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/Cama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="8"
                        android:textSize="20sp"
                        android:hint="No. Cama"
                        android:drawableLeft="@drawable/cama"
                        android:drawableStart="@drawable/cama"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="#1597E5"
                        android:text="Fecha de Ingreso: "
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/Ingreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="dd-mm-yyyy"
                        android:inputType="datetime"
                        android:ems="8"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:clickable="true"
                        android:onClick="mostrarCalendario"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ingreso"
                        android:drawableStart="@drawable/ingreso"/>

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/textp1"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:background="#69DADB"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Estado del paceinte"
                android:textColor="#000000"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/Estado"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textp2"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:background="#69DADB"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Avisos"
                android:textColor="#000000"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/Avisos"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Actualizar Datos"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>